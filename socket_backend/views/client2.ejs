<!DOCTYPE html>
<html lang="ko">
  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>socket</title>
    <script src="/socket.io/socket.io.js"></script>
  </head>
  <body>
    <h1> Hello World! </h1>
    <button onclick="hello()">hello</button>

    <button onclick="study()">study</button>

    <button onclick="bye()">bye</button>
    <br />
    <h3></h3>

    <script>
      const socket = io()
      const h3 = document.querySelector('h3')

      function hello() {
        socket.emit('hello', {
          msg: 'hello'
        })
        socket.on('helloCli', (res) => {
          h3.innerHTML = res.msg
          console.log(res.msg)
        })
      }

      function study() {
        socket.emit('study', {
          msg: 'study'
        })
        socket.on('studyCli', (res) => {
          h3.innerHTML = res.msg
        })
      }


      function bye() {
        socket.emit('bye', {
          msg: 'bye'
        })
        socket.on('byeCli', (res) => {
          h3.innerHTML = res.msg
        })
      }
    </script>
  </body>
</html>